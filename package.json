    "ci:fix": "biome check --diagnostic-level=error --fix",
    "type-check": "turbo run type-check",
    "update-readme": "sh ./update-readme.sh",
    "build": "turbo run build",
    "check": "turbo run check",
    "clean": "turbo run clean",
    "test": "turbo run test",
