    "list-mismatches": "syncpack list-mismatches",
    "fix-mismatches": "syncpack fix-mismatches",
    "updates": "npm-check-updates --workspaces",
    "postinstall": "lefthook install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "turbo": "^2.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "lefthook": "^2.0.13",
    "npm-check-updates": "^19.2.0",
    "syncpack": "^13.0.4",
    "typescript": "^5.9.3"
  }
