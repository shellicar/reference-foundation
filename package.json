{
  "name": "@shellicar/core-foundation",
  "version": "0.1.0",
  "description": "@shellicar/core-foundation is a comprehensive starter repository for building modern applications, including monorepo setups, infrastructure, web frameworks, Docker, TypeScript, testing, and more.",
  "packageManager": "pnpm@9.15.1",
  "main": "index.js",
  "scripts": {
    "lint": "biome lint",
    "format": "biome format",
    "ci": "biome ci --diagnostic-level=error",
    "ci:fix": "biome check --diagnostic-level=error --fix",
    "update-readme": "sh ./update-readme.sh",
    "build": "turbo run build",
    "check": "turbo run check",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "list-mismatches": "syncpack list-mismatches",
    "fix-mismatches": "syncpack fix-mismatches",
    "updates": "npm-check-updates --workspaces"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "turbo": "^2.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "npm-check-updates": "^17.1.12",
    "syncpack": "^13.0.0"
  },
  "pnpm": {
    "overrides": {}
  }
}
