{
  "name": "@shellicar-core-foundation/root",
  "version": "0.1.0",
  "description": "@shellicar/core-foundation is a comprehensive starter repository for building modern applications, including monorepo setups, infrastructure, web frameworks, Docker, TypeScript, testing, and more.",
  "packageManager": "pnpm@10.19.0",
  "main": "index.js",
  "scripts": {
    "lint": "biome lint",
    "format": "biome format",
    "ci": "biome ci --diagnostic-level=error",
    "ci:fix": "biome check --diagnostic-level=error --fix",
    "type-check": "turbo run type-check",
    "update-readme": "sh ./update-readme.sh",
    "build": "turbo run build",
    "check": "turbo run check",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "dev": "turbo run dev --concurrency 15",
    "list-mismatches": "syncpack list-mismatches",
    "fix-mismatches": "syncpack fix-mismatches",
    "updates": "npm-check-updates --workspaces"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "turbo": "^2.5.8"
  },
  "pnpm": {
    "overrides": {
      "tailwindcss": "==3.4.17",
      "cookie": "^1",
      "esbuild": ">=0.25.0"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "lefthook": "^2.0.0",
    "npm-check-updates": "^19.1.1",
    "syncpack": "^13.0.4",
    "typescript": "^5.9.3"
  }
}
