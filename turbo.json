{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "stream",
  "globalEnv": ["NODE_ENV", "DEV", "TF_BUILD"],
  "daemon": false,
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "check": {},
    "clean": {
      "cache": false
    },
    "test": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "type-check": {
      "dependsOn": ["^build", "transit"],
      "outputs": ["**/node_modules/.cache/tsbuildinfo.json"]
    }
  }
}
